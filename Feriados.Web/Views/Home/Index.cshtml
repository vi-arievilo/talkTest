@using Feriados.Model.DTO;

@model List<FeriadoRequest>

@{
    ViewData["Title"] = "Home Page";

}
<div>
    <br><br><br><br>
    <table class="table table-bordered th table-striped table-hover">
        <thead class="text-center text-uppercase">
            <tr>
                <td  width="5%">data</td>
                <td width="5%">Title</td>
                <td width="20%">Description</td>
                <td width="10%">Legislation</td>
                <td width="10%">Type</td>
                <td width="10%">Start Time</td>
                <td width="10%">End Time</td>
                <td width="10%">variables</td>
                <td colspan="2">Options</td>
            </tr>
        </thead>
        @{
            foreach (var item in Model)
            {
        <tr>
            <td  width="5%" >@item.date</td>
            <td width="5%" >@item.title</td>
            <td width="20%" >@item.description</td>
            <td width="10%" >@item.legislation</td>
            <td width="10%" >@item.type</td>
            <td width="10%" >@item.startTime</td>
            <td width="10%" >@item.endTime</td>
            <td width="10%" >@item.variables</td>
            <td> <a href="@Url.Action("Edit", "Home", new { id = item.id})" class="btn btn btn-primary btn-block">Editar</a></td>
            <td> <a href="@Url.Action("Delete", "Home", new { id = item.id})" class="btn btn-danger btn-primary btn-block">Excluir</a></td>
        </tr>

            }

        }

    </table>

</div>
